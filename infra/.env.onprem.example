# Variables de entorno para despliegue On-Premise
# Copia este archivo a .env.onprem y edítalo con valores reales.

# Modo de la app
VITE_APP_MODE=LOCAL

# API (si el frontend y backend están en la misma máquina normalmente apunta a la app local)
VITE_API_URL=http://localhost:3000/api

# Licencia
VITE_LICENSE_KEY=GF-XXXX-XXXX-XXXX
VITE_INSTANCE_ID=mi-instancia-001
VITE_LICENSE_CHECK_INTERVAL_DAYS=1
VITE_LICENSE_GRACE_DAYS=7
VITE_CLOUD_URL=https://app.gastroflow.cloud

# Database
DATABASE_URL=postgres://gastroflow:gastroflow@postgres:5432/gastroflow

# Almacenamiento
STORAGE_TYPE=local
# Si usas MinIO
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=gastroflow

# Telemetría
ENABLE_TELEMETRY=false

# Otros
NODE_ENV=production
PORT=3000
